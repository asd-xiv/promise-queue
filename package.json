{
  "name": "library-stack-node",
  "version": "0.0.1",
  "description": "Library Stack for Node.js projects",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "/dist"
  ],
  "homepage": "https://github.com/andreidmt/tpl-node",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreidmt/tpl-node.git"
  },
  "bugs": {
    "url": "https://github.com/andreidmt/tpl-node/issues"
  },
  "author": {
    "name": "Andrei Dumitrescu",
    "url": "https://github.com/andreidmt"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "esm",
    "tape",
    "eslint",
    "prettier",
    "lintstaged",
    "commitlint",
    "markdownlint",
    "circleci",
    "semantic-release",
    "coveralls",
    "swc",
    "c8"
  ],
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "----UTIL": "",
    "prepare": "git config --local core.hooksPath .githook",
    "setup": "npm install",
    "update": "npm-check --update",
    "postupdate": "npm audit --fix",
    "----BUILD": "",
    "build.js": "swc src -d dist",
    "build.types": "tsc --project .tscrc --emitDeclarationOnly",
    "build": "npm run build.js && npm run build.types",
    "----LINT": "",
    "lint.js-staged": "eslint --quiet",
    "lint.md-staged": "markdownlint",
    "lint.js": "eslint --quiet src",
    "lint.md": "markdownlint '*.md'",
    "lint": "npm run lint.js && npm run lint.md",
    "typecheck": "tsc --project .tscrc --noEmit",
    "----TEST": "",
    "pretest": "npm run build.js",
    "test": "tape 'dist/*.test.js' 'dist/**/*.test.js' | tap-nirvana",
    "tdd": "nodemon --watch src --ext js,ts,json --exec 'npm test'",
    "----TEST-COVERAGE": "",
    "coverage": "c8 npm test && c8 report --reporter=text-lcov | coveralls",
    "----BENCHMARK": "",
    "prebenchmark": "npm run build.js && rm -rf ./benchmark",
    "benchmark": "node dist/**/*.bench.js",
    "----PUBLISH": "",
    "prepublish": "npm run build",
    "publish": "semantic-release"
  },
  "dependencies": {},
  "devDependencies": {
    "@asd14/eslint-config": "^6.3.0",
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@swc/cli": "^0.1.51",
    "@swc/core": "^1.2.106",
    "@types/tape": "^4.13.2",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "benny": "^3.7.1",
    "c8": "^7.10.0",
    "coveralls": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-no-inferred-method-name": "^2.0.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-unicorn": "^38.0.0",
    "lint-staged": "^11.2.6",
    "markdownlint-cli": "^0.29.0",
    "nodemon": "^2.0.14",
    "npm-check": "^5.9.2",
    "prettier": "^2.4.1",
    "semantic-release": "^18.0.0",
    "tap-nirvana": "^1.1.0",
    "tape": "^5.3.1"
  }
}
